---
interface Props {
  title: string;
  url: string;
}
const { title, url } = Astro.props;
---

<a
  href={url}
  target="_blank"
  class="flex items-center justify-center gap-1 h-[50px] whitespace-nowrap text-center text-white border border-white px-6 relative group w-full md:w-auto"
  ><div
    class="pointer-events-none w-[calc(100%-10px)] h-[calc(100%+15px)] absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 border border-white"
  >
  </div><div
    class="pointer-events-none w-[calc(100%-10px)] h-full absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 group-hover:bg-white/50 transition-colors"
  >
  </div>
  <slot name="svg" />
  {title}
</a>
